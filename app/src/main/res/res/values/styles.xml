<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BasicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#f0ece2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ec625f</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/light</item>
        <!--        <item name="android:background">#f0ece2</item>-->
        <item name="android:textColor">#000000</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">#ec625f</item>

    </style>

</resources>
